{
  "extends": "./node_modules/@significa/tsconfig-config/index.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./build",
    "declarationDir": "./build/types",
    "declarationMap": true,
    "esModuleInterop": true,
    "noEmit": false,
    "sourceMap": true,
    "target": "ES2020",
    "isolatedModules": false,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "examples",
    "jest.config.js",
    "commitlint.config.js"
  ]
}
